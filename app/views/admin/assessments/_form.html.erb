<div class="row">
	<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 admin-layout admin-layout-backgound">
	  <h3 class="text-center">Add Assessment</h3>
		<%=form_for (["admin",@assessment]) do |f|%>
			 <div class="form-group">
		       <%= f.label :name %>
		       <%= f.text_field :name, class: 'form-control' %>
		    </div>
				<%= f.fields_for :questions do |task| %>
					<div class="form-group">
						<%= render 'question_fields', :f => task %>
						<div class="links">
							<%= link_to_add_association 'add question', f, :questions %>
						</div>
					</div>

					<%= task.fields_for :answers do |task1| %>
						<%= render 'answer_fields', :f => task1 %>
						<div class="links">
							<%= link_to_add_association 'add answer', task, :answers %>
						</div>
					<% end %>
				<% end %>
				<div class="form-group">
		      <%= f.submit  class: "btn btn-primary form-control" %>
				</div>
		<% end %>
	</div>
</div>

