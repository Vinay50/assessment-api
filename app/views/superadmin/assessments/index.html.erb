<div class ="container">
    <%= link_to "Add Assessment", new_superadmin_assessment_path, :class => "btn btn-success pull-right", :style =>"margin-right:10px;margin-top: 18px;" %>
    <h3 class="text-center">Assessents</h3><hr>
      <table id="product_lists" class ="table-bordered  table-hover .table-striped" width="100%">
    <thead>
      <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @assessments.each do |assessment| %>
          <tr class="text-center">
              <td><%= assessment.name %></td>
              <td class="text-center"><%=link_to "Edit", edit_superadmin_assessment_path(assessment.id), class: "btn btn-info btn-xs" %>
              <%= link_to "Delete", superadmin_assessment_path(assessment.id),
                  data: {:confirm => 'Are you sure?'}, :method => :delete, class: "btn btn-warning btn-xs", style: "margin-left:15px"%>

                </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>

